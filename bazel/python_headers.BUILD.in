    name = "python_headers",
    hdrs = glob(["@INCLUDE_DIRECTORIES_PLACEHOLDER@/**/*.h"]),
    strip_include_prefix = "@INCLUDE_DIRECTORIES_PLACEHOLDER@",
    @LINK_LIBRARY_LINE_PLACEHOLDER@
    includes = ["."],
    visibility = ["//visibility:public"],
)
